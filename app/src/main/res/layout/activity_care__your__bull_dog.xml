<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phamm.bulldog.Care_Your_BullDogActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:background="@drawable/background_header"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:src="@drawable/avatar_bulldog"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:text="2 hours to Eat Food"
            android:textColor="#ffffff"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="33dp"
            android:src="@drawable/health_icon"
            android:layout_alignTop="@+id/imageView"
            android:layout_toStartOf="@+id/textView6" />

        <TextView
            android:id="@+id/txtNameDog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milo"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_toStartOf="@+id/imageView2"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignBottom="@+id/imageView2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="U"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginEnd="39dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="159dp"
        android:layout_height="154dp"
        android:background="@drawable/heath_background"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linearLayoutHealth"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_toStartOf="@+id/linearLayoutGallery">

        <ImageView
            android:layout_marginTop="50dp"
            android:id="@+id/imageView3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/heartbeat_icon" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Health"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advices,tips about your bulldog"
            android:textColor="#e9e9e9" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/gallery_background"
        android:layout_width="159dp"
        android:layout_height="154dp"
        android:orientation="vertical"
        android:id="@+id/linearLayoutGallery"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_marginEnd="30dp"
        android:layout_alignTop="@+id/linearLayoutHealth"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/imageViewGallery"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/gallery" />

        <TextView
            android:id="@+id/txtViewGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Gallery"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:id="@+id/txtViewGallery1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photos,moments of your pet"
            android:textColor="#e9e9e9" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/reminder_background"
        android:layout_width="159dp"
        android:layout_height="154dp"
        android:orientation="vertical"
        android:id="@+id/linearLayoutReminder"
        android:gravity="center"
        android:layout_alignTop="@+id/linearLayoutDetails"
        android:layout_alignStart="@+id/linearLayoutHealth">

        <ImageView
            android:id="@+id/imageViewReminder"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/bell_ring_alarm_icon" />

        <TextView
            android:id="@+id/txtViewReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Reminder"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:id="@+id/txtViewReminder1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wanna make your pet eat ontime?"
            android:textColor="#e9e9e9" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutDetails"
        android:background="@drawable/details_background"
        android:layout_width="159dp"
        android:layout_height="154dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/linearLayoutGallery"
        android:layout_alignStart="@+id/linearLayoutGallery"
        android:layout_marginTop="11dp">
        <ImageView
            android:layout_marginTop="50dp"
            android:id="@+id/imageViewDetails"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/folder_icon" />

        <TextView
            android:id="@+id/txtViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Folder"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:id="@+id/txtViewDetails1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height, weight and etc.."
            android:textColor="#e9e9e9" />
    </LinearLayout>


</RelativeLayout>
